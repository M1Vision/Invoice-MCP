{
  "name": "invoice-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for creating professional PDF invoices using natural language",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "invoice-mcp": "build/index.js"
  },
  "scripts": {
    "build": "cd server && npm install && npm run build && cd .. && cp -r server/build .",
    "start": "node build/index-http.js",
    "start:stdio": "node build/index.js",
    "test": "jest",
    "prepare": "npm run build"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "invoice",
    "mcp",
    "pdf",
    "billing",
    "claude",
    "natural-language",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markslorach/invoice-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@react-pdf/renderer": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}

